{% extends 'layouts/default.twig' %}

{% block title %}
    <title>Liste des catégories</title>
{% endblock %}

{% block content %}

<main class="mw8 pa3 center flex flex-column min-vh-100 main_admin pr4">
    {{ include('admin/admin_menu.html.twig') }}
    <section>
        <form class="measure center mv4" method="get" action="/admin/categories/update" >
        <fieldset id="sign_up" class="ba b--transparent ph0 mh0">
            <legend class="f4 fw6 ph0 mh0 nes">Modification de la catégorie</legend>
            <div class="mt3">
                <input class="b pa2 input-reset ba bg-white hover-bg-black hover-white w-100" type="hidden"
                    name="id" id="id" value="{{ category.id|e }}">
            </div>
            <div class="mt3">
                <label class="db fw6  lh-copy f6" for="pseudo">Nom de la catégorie</label>
                <input class="pa2 input-reset ba bg-white hover-bg-black hover-white w-100" type="text"
                    name="name" id="name" value="{{ category ? category.name|e : '' }}">
            </div>
            {% if errors.name %}
                <div class="red pt1 i">{{ errors.name }}</div>
            {% endif %}
            <div class="mt3">
                <label class="db fw6 lh-copy f6" for="email-address">Slug</label>
                <input class="pa2 input-reset ba bg-white hover-bg-black hover-white w-100" type="text"
                    name="slug" id="slug" value="{{ category ? category.slug|e : '' }}">
            </div>
            {% if errors.slug %}
                <div class="red pt1 i">{{ errors.slug }}</div>
            {% endif %}
            {% if errors.form_failed_update_category %}
                <div class="red pt1 i">{{ form_failed_update_category }}</div>
            {% endif %}
        </fieldset>
        <div class="">
            <input
                class="ph3 pv2 input-reset b--black bg-transparent pointer f6 dib no-underline black bg-animate hover-bg-black hover-white nes"
                type="submit" value="Modifier" name"submit">
        </div>
        </form>
    </section>
</main>

{% endblock %}