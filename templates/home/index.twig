{% extends 'layouts/default.twig' %}

{% block title %}
    <title>Blog PHP</title>
{% endblock %}

{% block content %}
    <main class="min-vh-100 main_home">
        <div class="w-100 vh-75-l vh-50">
            <div class="center" style="background:url(./img/banner.jpg) no-repeat center; width: 100%; height: 100%; background-size: cover;">
                <div class="flex tr justify-center content-center flex-column h-100 pr3-l pr1-m pr0">
                    <h1 class="i white baskerville quote-banner f3-l f4-m f6">" Stop maintenant, il faut que ça CSS ! "</h1>
                </div>
            </div>
        </div>

        <section class="pa4">
            <h1 class="tc ttu nes">Derniers articles</h1>
            <div class="flex-l w-100 tc justify-center">
            {% for post in posts %}
                <article class="fl w-100 pb3 bg-white  measure-narrow-l ba b--black-10 mv4 mh4-l relative h-100 last_article">
                    <div class="pv2 ph3">
                        <h1 class="f6 ttu tracked ba b--black pa1">Article les + récents</h1>
                    </div>
                    <img src="/uploads/{{ post.filename }}" class="w-100 db h-50-l imgpost" alt="article_image">
                    <div class="pa3">
                        <a href="/articles/{{ post.slug }}?id={{ post.id }}" class="link dim lh-title black b ">{{ post.title }}</a>
                        <p class="pv2 f6 lh-copy measure center">{{ post.chapo|slice(0, 450)|nl2br }} ...</p>
                        <small class="blue db pv2 absolute bottom-0 left-0 right-0 ">{{post.update_at ? post.update_at|date("d/m/Y H:i:s") : post.created_at|date("d/m/Y H:i:s") }}</small>
                    </div>
                </article>
            {% endfor %}               
            </div>
            <div class="tc">
                <a class="f5 no-underline black bg-animate hover-bg-black hover-white grow-large inline-flex items-center pa3 ba border-box nes" href="/articles">Tous les articles</a>
            </div>
        </section>     
    </main>
    
{% endblock %}